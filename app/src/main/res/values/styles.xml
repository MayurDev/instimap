<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Convocation Fragment -->
    <style name="ConvocationDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:text">@string/convocation_date</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ConvocationTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:text">@string/convocation_title</item>
        <item name="android:textSize">@dimen/convocation_title_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ConvocationSectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@color/list_item_gray_even</item>
    </style>
    <style name="ConvocationCheifGuestName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:text">@string/convocation_cheif_guest_name</item>
    </style>
    <style name="ConvocationCheifGuestSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/convocation_cheif_guest_subtitle_size</item>
        <item name="android:text">@string/convocation_cheif_guest_subtitle</item>
    </style>
    
    <style name="ConvocationVenueTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/convocation_venue_title_size</item>
    </style>
    
    <style name="ConvocationVenueSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">@dimen/convocation_cheif_guest_subtitle_size</item>
    </style>

</resources>
