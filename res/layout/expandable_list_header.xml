<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical"
    android:background="#F0FFFFFF" >
    <ImageView 
        android:id="@+id/group_color"
        android:layout_width="12dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:paddingLeft="0dp"
        android:layout_marginLeft="0dp"
        android:cropToPadding="true"/>
    <ImageView
        android:id="@+id/icon_expand"
        android:layout_width="32dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/group_color"
        android:cropToPadding="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:contentDescription="list item"
        android:src="@drawable/ic_action_next_item"
        android:visibility="visible" />
    <TextView
        android:id="@+id/mark_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingRight="8dp"
        android:text="Mark All"
        android:textColor="@android:color/darker_gray" />
    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon_expand"
        android:layout_toLeftOf="@id/mark_all"
        android:padding="8dp"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:textSize="@dimen/index_header_text_size" />


</RelativeLayout>