<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.mrane.campusmap.MainActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </LinearLayout>

    <com.mrane.zoomview.CampusMapView
        android:id="@+id/campusMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/small_card_bg" >

            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:dropDownHeight="0dp"
                android:fontFamily="sans-serif-light"
                android:hint="@string/search"
                android:imeOptions="actionSearch"
                android:paddingRight="48dp"
                android:paddingBottom="8dp"
                android:paddingLeft="64dp"
                android:paddingTop="8dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textSize="@dimen/searchbar_text_size"
                android:inputType="textNoSuggestions" />

            <ImageButton
                android:id="@+id/search_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/search"
                android:onClick="searchClick"
                android:src="@drawable/ic_action_search"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/remove_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:contentDescription="remove"
                android:onClick="removeClick"
                android:padding="8dp"
                android:src="@drawable/ic_action_remove"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/index_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent"
                android:contentDescription="index"
                android:onClick="indexClick"
                android:padding="12dp"
                android:scaleType="fitXY"
                android:cropToPadding="true"
                android:src="@drawable/dept_menu" />

            <ImageButton
                android:id="@+id/map_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent"
                android:contentDescription="map"
                android:onClick="mapClick"
                android:padding="12dp"
                android:scaleType="fitXY"
                android:cropToPadding="true"
                android:src="@drawable/dept_menu_off"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/header_container"
            android:orientation="vertical" >
        </RelativeLayout>
        <View 
            android:layout_height="8dp"
            android:layout_width="match_parent"
            android:layout_below="@id/header_container"
            android:background="@drawable/shadow_gradient"/>
    </RelativeLayout>
	
    <com.mrane.campusmap.ExtendedRelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:background="@android:color/darker_gray">
	    <RelativeLayout
	        android:id="@+id/place_card"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/card_height"
	        android:layout_alignParentTop="true"
	        android:minHeight="@dimen/card_height"
	        android:background="@drawable/bottom_card_background">
            <RelativeLayout
                android:id="@+id/small_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hidden_card_height"
                android:layout_alignParentTop="true"
                android:background="@drawable/small_card_bg">
	            <ImageView 
	                android:id="@+id/place_color"
	                android:layout_width="12dp"
	                android:layout_height="@dimen/hidden_card_height"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentTop="true"
	                />
	            <!-- <ImageButton
		            android:id="@+id/remove_card_icon"
		            android:src="@drawable/ic_action_remove"
		            android:layout_width="48dp"
		            android:layout_height="48dp"
		            android:layout_alignParentTop="true"
		            android:layout_alignParentRight="true"
		            android:background="@android:color/transparent"
		            android:layout_margin="0dp"
		            android:onClick="removeCardClick"/>-->
	            <ImageButton
		            android:id="@+id/add_marker_icon"
		            android:src="@drawable/lock_all_off"
		            android:layout_width="48dp"
		            android:layout_height="48dp"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:padding="8dp"
		            android:scaleType="fitXY"
		            android:cropToPadding="true"
		            android:contentDescription="@string/search"
		            android:background="@android:color/transparent"
		            android:onClick="addMarkerClick"/>
	            
		        <TextView
		            android:id="@+id/place_name"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_alignParentTop="true"
		            android:layout_toLeftOf="@id/add_marker_icon"
		            android:layout_toRightOf="@id/place_color"
		            android:fontFamily="sans_serif"
		            android:paddingTop="8dp"
		            android:paddingLeft="8dp"
		            android:paddingRight="8dp"
		            android:textSize="@dimen/place_name_text_size" >
		        </TextView>
		        <TextView 
		            android:id="@+id/place_sub_head"
		            android:text="@string/location_search"
		            android:layout_width="fill_parent"
		            android:layout_height="48dp"
		            android:layout_below="@id/place_name"
		            android:layout_toRightOf="@id/place_color"
		            android:layout_toLeftOf="@id/add_marker_icon"
		            android:fontFamily="sans_serif_light"
		            android:paddingLeft="8dp"
		            android:paddingRight="8dp"
		            android:textSize="@dimen/place_sub_head_text_size"
		            android:textColor="@color/gray"/>
		    </RelativeLayout>
		    <ScrollView 
		        android:id="@+id/expanded_place_card_scroll"
		        android:layout_height="wrap_content"
		        android:layout_width="match_parent"
		        android:layout_below="@id/small_card"
		        >
		        <RelativeLayout 
		            android:id="@+id/expanded_place_card"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical">
		            <ImageView 
		                android:id="@+id/place_image"
		                android:layout_width="match_parent"
		                android:layout_height="fill_parent"
		                android:layout_alignParentTop="true"
		                android:adjustViewBounds="true"
		                android:src="@drawable/mainbuilding"/>
		        </RelativeLayout>
		    </ScrollView>
		    <View 
                android:layout_height="8dp"
                android:layout_width="match_parent"
                android:layout_alignTop="@id/expanded_place_card_scroll"
                android:background="@drawable/shadow_gradient"/>
	    </RelativeLayout>
    </com.mrane.campusmap.ExtendedRelativeLayout>

</FrameLayout>