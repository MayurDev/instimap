<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrane.campusmap.MainActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </LinearLayout>

    <com.mrane.zoomview.CampusMapView
        android:id="@+id/campusMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.mrane.campusmap.CustomAutoCompleteView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:background="@drawable/searchbar_background"
                android:dropDownHeight="0dp"
                android:hint="Search"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:paddingLeft="48dp"
                android:paddingTop="8dp" />

            <ImageButton
                android:id="@+id/search_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:contentDescription="search"
                android:layout_margin="8dp"
                android:src="@drawable/ic_action_search"
                android:onClick="searchClick"
                android:background="@android:color/transparent" />
            
            <ImageButton
                android:id="@+id/remove_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:contentDescription="remove"
                android:padding="8dp"
                android:src="@drawable/ic_action_remove"
                android:visibility="gone"
                android:onClick="removeClick" 
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/index_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:contentDescription="index"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:src="@drawable/ic_action_view_as_list" 
                android:onClick="indexClick"
                android:background="@android:color/transparent"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</FrameLayout>