            -->

            <RelativeLayout
                android:id="@+id/convocation_title_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#88444444" >

                <TextView
                    android:id="@+id/convocation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:text="52nd Convocation"
                    android:padding="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical" >
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/shadow_gradient" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_layout_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" >

            <LinearLayout
                android:id="@+id/linear_place_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:animateLayoutChanges="true"
                android:background="@android:color/transparent"
                android:orientation="vertical" >

                <!--
                     ImageView
                    android:id="@+id/settings_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/searchbar_background"
                    android:cropToPadding="true"
                    android:onClick="settingsClick"
                    android:padding="10dp"
                    android:src="@drawable/settings" /
                -->

                <RelativeLayout
                    android:id="@+id/new_small_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/small_card_bg"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/place_color"
                        android:layout_width="12dp"
                        android:layout_height="@dimen/hidden_card_height"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true" />

                    <ImageButton
                        android:id="@+id/toggle_card_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/search"
                        android:cropToPadding="true"
                        android:onClick="toggleCardClick"
                        android:padding="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/arrow_circle_up" />

                    <ImageButton
                        android:id="@+id/add_marker_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="4dp"
                        android:layout_toLeftOf="@id/toggle_card_icon"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/search"
                        android:cropToPadding="true"
                        android:onClick="addMarkerClick"
                        android:padding="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/lock_all_off" />

                    <TextView
                        android:id="@+id/place_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@id/add_marker_icon"
                        android:layout_toRightOf="@id/place_color"
                        android:fontFamily="sans_serif"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp"
                        android:textSize="@dimen/place_name_text_size" >
                    </TextView>

                    <TextView
                        android:id="@+id/place_sub_head"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/place_name"
                        android:layout_toLeftOf="@id/add_marker_icon"
                        android:layout_toRightOf="@id/place_color"
                        android:fontFamily="sans_serif_light"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="@string/location_search"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/place_sub_head_text_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/new_expand_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/list_item_gray_even"
                    android:visibility="gone" >

                    <ScrollView
                        android:id="@+id/new_expanded_place_card_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/expanded_card_height"
                        android:layout_alignParentTop="true" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <LinearLayout
                                android:id="@+id/expanded_place_card"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#e5e5e5"
                                android:orientation="horizontal" >
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/other_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:orientation="vertical" >
                            </LinearLayout>
                        </RelativeLayout>
                    </ScrollView>

                    <RelativeLayout
                        android:id="@+id/color_strip"
                        android:layout_width="12dp"
                        android:layout_height="@dimen/expanded_card_height"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true" >

                        <View
                            android:id="@+id/place_group_color"
                            android:layout_width="12dp"
                            android:layout_height="@dimen/expanded_card_height"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="0dp"
                            android:alpha="0.5"
                            android:paddingLeft="0dp" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="@dimen/expanded_card_height"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="0dp"
                            android:alpha="0.5"
                            android:background="@color/transparent_black"
                            android:paddingLeft="0dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/shadow_gradient" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settings_outer"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingRight="5dp"
            android:paddingTop="53dp" >

            <LinearLayout
                android:id="@+id/settings_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bottom_card_background"
                android:orientation="vertical"
                android:visibility="gone" >
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <ScrollView
        xmlns:custom="http://schemas.android.com/apk/res/in.designlabs.instimap"
        android:id="@+id/drawer_list"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/list_item_gray_even"
        android:choiceMode="singleChoice" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <com.mrane.campusmap.CustomCheckBoxPreference
                    android:id="@+id/mute_pref"
                    custom:name="@string/setting_mute_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    custom:defaultValue="false"
                    custom:key="@string/setting_mute_key"
                    custom:summaryOff="@string/setting_mute_summary_off"
                    custom:summaryOn="@string/setting_mute_summary_on" />

                <com.mrane.campusmap.CustomCheckBoxPreference
                    android:id="@+id/residences_pref"
                    custom:name="@string/setting_residences_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    custom:defaultValue="true"
                    custom:key="@string/setting_residences_key"
                    custom:summaryOff="@string/setting_residences_summary_off"
                    custom:summaryOn="@string/setting_residences_summary_on" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/about_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/list_item_gray_even"
                android:padding="16dp"
                android:textColor="@android:color/darker_gray" >

                <TextView
                    android:id="@+id/about_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/about_version"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/about_version_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/about_version"
                    android:text="@string/about_version_date" />

                <LinearLayout
                    android:id="@+id/credits_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/about_version_date"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Designlabs, IIT Bombay"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:paddingLeft="4dp"
                        android:text="Prof. Mandar Rane" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="0dp"
                        android:background="@color/list_item_seperator_black"
                        android:padding="0dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="0dp"
                        android:background="@color/list_item_seperator_white"
                        android:padding="0dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:paddingLeft="4dp"
                        android:text="Shishir Bhagade" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="0dp"
                        android:background="@color/list_item_seperator_black"
                        android:padding="0dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="0dp"
                        android:background="@color/list_item_seperator_white"
                        android:padding="0dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:paddingLeft="4dp"
                        android:text="Jaikishan Patel" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="0dp"
                        android:background="@color/list_item_seperator_black"
                        android:padding="0dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="0dp"
                        android:background="@color/list_item_seperator_white"
                        android:padding="0dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:paddingLeft="4dp"
                        android:text="Aditi Kulkarni" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="0dp"
                        android:background="@color/list_item_seperator_black"
                        android:padding="0dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="0dp"
                        android:background="@color/list_item_seperator_white"
                        android:padding="0dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:paddingLeft="4dp"
                        android:text="Manideep Polireddi" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="0dp"
                        android:background="@color/list_item_seperator_black"
                        android:padding="0dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="0dp"
                        android:background="@color/list_item_seperator_white"
                        android:padding="0dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:paddingLeft="4dp"
                        android:text="Madhu kiran" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.DrawerLayout>