<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/small_card_bg" >

    <ImageButton
        android:id="@+id/settings_icon"
        android:layout_width="32dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/search"
        android:cropToPadding="true"
        android:onClick="settingsClick"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/settings" />

    <View
        android:id="@+id/seperator"
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:background="@color/list_item_seperator_black" />

    <EditText
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/settings_icon"
        android:background="@null"
        android:dropDownHeight="0dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:inputType="textNoSuggestions"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="76dp"
        android:paddingTop="8dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textSize="@dimen/searchbar_text_size" />

    <ImageButton
        android:id="@+id/index_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:contentDescription="index"
        android:cropToPadding="true"
        android:onClick="indexClick"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/dept_menu" />

    <ImageButton
        android:id="@+id/map_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:contentDescription="map"
        android:cropToPadding="true"
        android:onClick="mapClick"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/dept_menu_off"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/remove_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:contentDescription="remove"
        android:onClick="removeClick"
        android:padding="8dp"
        android:src="@drawable/ic_action_remove"
        android:visibility="gone" />

</RelativeLayout>